@import "../../../lib/template/work/template.wxss";
@import "../../../lib/style/weui/weui.wxss";

page {
  background: #F8F8F8;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.icon-flex {
  display: flex;
  /* padding: 20rpx 0rpx 0rpx 0rpx; */
  justify-content: flex-start;
  align-items:center;
}
.userinfo {
  display: flex;
  justify-content: space-between;
  align-items:center;
  height: 160rpx;
  width: 100%;
  background: #E24447;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 80%;
  background-size: cover;
  background-color: white;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #ffffff;
  display:flex; 
  flex-direction: column;
  align-items:center;
}